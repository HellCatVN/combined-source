{
  "name": "imidman-api",
  "version": "0.0.0",
  "description": "iMidman API Server",
  "author": "",
  "license": "ISC",
  "scripts": {
    "start": "npm run build && cross-env NODE_ENV=production node dist/server.js",
    "dev:sync": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register --transpile-only src/server.ts",
    "dev": "cross-env NODE_ENV=development nodemon -r tsconfig-paths/register --transpile-only src/server.ts",
    "prod": "cross-env NODE_ENV=production nodemon -r tsconfig-paths/register --transpile-only src/server.ts",
    "build": "swc src -d dist --source-maps --copy-files",
    "build:tsc": "tsc && tsc-alias",
    "deploy:prod": "pm2 start ecosystem.config.js && pm2 logs node-api",
    "migrate:up": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/database/migration/index.ts up",
    "migrate:down": "cross-env NODE_ENV=development ts-node -r tsconfig-paths/register src/database/migration/index.ts down",
    "migrate": "yarn migrate:up"
  },
  "dependencies": {

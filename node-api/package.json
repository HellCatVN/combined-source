    "helmet": "^5.1.1",
    "hpp": "^0.2.3",
    "i18next": "^22.5.0",
    "i18next-resources-to-backend": "^1.1.4",
    "inversify": "^6.0.2",
    "jsonwebtoken": "^8.5.1",
    "module-alias": "^2.2.3",
    "mongoose": "^8.4.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "reflect-metadata": "^0.1.13",
    "request-ip": "^3.3.0",
    "swagger-jsdoc": "^6.2.1",
    "swagger-ui-express": "^4.5.0",
    "telegraf": "^4.16.3",
